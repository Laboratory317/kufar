void go_disable_servos() {
  digitalWrite( SERVO_PWR_ENABLE, 0 ); // interupt servo power- reset automaticly position hold

  for ( int i = 0; i < sizeof(servos); i++ ) {
    servos[i].detach();
  }
  delay(10);

#ifdef DEBUG_SERVOS_P
  Serial.println("DISABLED SERVOS");
#endif

}









